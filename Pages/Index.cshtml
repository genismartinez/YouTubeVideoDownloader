@page
@model IndexModel
@{
    ViewData["Title"] = "YouTube Video Downloader";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-page-handler="OnPostAsync">
    <div class="form-group">
        <label for="videoUrl">YouTube Video URL:</label><br/>
        <input type="url" class="form-control" id="videoUrl" name="videoUrl" placeholder="Paste video URL here" required><br/>
    </div>
    <button type="submit" class="btn btn-primary">Process URL</button>
</form>
